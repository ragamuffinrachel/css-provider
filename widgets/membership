<body>

  <div class="widget">
    <h2>CSS Membership and Services Growth</h2>
    <div class="charts">
      <div class="chart-container">
        <h3>Members</h3>
        <canvas id="membersChart"></canvas>
      </div>
      <div class="chart-container">
        <h3>Services</h3>
        <canvas id="servicesChart"></canvas>
      </div>
    </div>
  </div>

  <!-- Chart.js CDN -->
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <script>
    // common data
    const years = ['2022','2023','2024'];
    const members = [764, 3629, 4465];
    const services = [2236, 16658, 26552];

    // create a peachâ€‘orange gradient
    function makeGradient(ctx) {
      const grad = ctx.createLinearGradient(0, 0, 0, 260);
      grad.addColorStop(0, '#F9B38C');
      grad.addColorStop(1, '#F4A377');
      return grad;
    }

    function buildChart(ctxId, data) {
      const ctx = document.getElementById(ctxId).getContext('2d');
      return new Chart(ctx, {
        type: 'bar',
        data: {
          labels: years,
          datasets: [{
            data,
            backgroundColor: makeGradient(ctx),
            borderRadius: 4,
            barPercentage: 0.6
          }]
        },
        options: {
          maintainAspectRatio: false,
          plugins: {
            legend: { display: false },
            tooltip: {
              backgroundColor: 'rgba(0,0,0,0.7)',
              titleFont:   { family: 'Montserrat', size: 12 },
              bodyFont:    { family: 'Montserrat', size: 12 }
            }
          },
          scales: {
            x: {
              grid:        { display: false },
              ticks:       { font: { family: 'Montserrat', size: 12 } }
            },
            y: {
              grid:        { color: '#eee' },
              ticks:       { font: { family: 'Montserrat', size: 12 }, beginAtZero: true }
            }
          }
        }
      });
    }

    // render both charts
    buildChart('membersChart', members);
    buildChart('servicesChart', services);
  </script>
</body>
